					<ed:Callout AnchorPoint="0,1.25" CalloutStyle="Oval" Content="sdbcskjbvskdbvdvbdvsmdvb?" Foreground="{StaticResource BaseForeground-Sketch}" Fill="{StaticResource BaseBackground-Sketch}" FontSize="{StaticResource SizeDouble-Sketch}" FontFamily="{StaticResource FontFamily-Sketch}" ed:GeometryEffect.GeometryEffect="Sketch" Height="120" Stroke="{StaticResource BaseBorder-Sketch}" StrokeThickness="2" Margin="190,-150,29,50" VerticalAlignment="Center"/>
				</StackPanel>
			</ListBoxItem>
			<ListBoxItem Margin="0" Style="{StaticResource ListBoxItem-Sketch}" Height="164">
				<ListBoxItem.Projection>
					<PlaneProjection RotationX="1" RotationY="1"/>
				</ListBoxItem.Projection>
				<StackPanel Height="164" Width="475">
					<Image Height="160" Margin="300,0,0,0" Source="Images/user3.jpg" Stretch="Fill" HorizontalAlignment="Left" Width="140" d:LayoutOverrides="HorizontalAlignment"/>
					<ed:Callout AnchorPoint="0,1.25" CalloutStyle="Oval" Content="sldkfhsdklfhsdlfhksdlfkhsd&#xa;" Foreground="{StaticResource BaseForeground-Sketch}" Fill="{StaticResource BaseBackground-Sketch}" FontSize="{StaticResource SizeDouble-Sketch}" FontFamily="{StaticResource FontFamily-Sketch}" ed:GeometryEffect.GeometryEffect="Sketch" Height="120" Stroke="{StaticResource BaseBorder-Sketch}" StrokeThickness="2" Margin="0,-150,220,50" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
						<ed:Callout.Projection>
							<PlaneProjection RotationY="180"/>
						</ed:Callout.Projection>
						<ed:Callout.RenderTransform>
							<CompositeTransform Rotation="360"/>
						</ed:Callout.RenderTransform>
					</ed:Callout>
				</StackPanel>
			</ListBoxItem>
			
		</ListBox>
		<Button Content="Send"  VerticalAlignment="Bottom" Margin="362,0,0,72" Height="101" FontSize="32" FontFamily="/WindowsPhonePrototype1.Screens;component/Fonts/SketchFlow Print.ttf#SketchFlow Print">
			<Button.Background>
				<LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
					<GradientStop Color="#FF9D6F2B" Offset="0.531"/>
					<GradientStop Color="#FF231807" Offset="0.543"/>
				</LinearGradientBrush>
			</Button.Background>
		</Button>
		<local:ApplicationBar Height="200" VerticalAlignment="bottom" d:IsPrototypingComposition="True" Margin="0"/>
    </Grid>
</mockups:WindowsPhoneChrome>
